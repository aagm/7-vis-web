.l-header
  position fixed
  display none
  width 100%
  height 70px
  top 0
  @extend .is-clearfix

.l-nav
  display flex
  justify-content space-between
  align-items stretch
  height 70px

.l-page
  display none
  position absolute
  top 70px
  bottom 0
  left 0
  right 0
  overflow hidden
  transition all 1s ease-in

  &#welcomePageView
    top 0

  &.is-active
    display flex

  iframe
    display block
    width 100%
    flex 1
